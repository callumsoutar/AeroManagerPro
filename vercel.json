{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/email",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/email"
    },
    {
      "src": "/api/test",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/test"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 